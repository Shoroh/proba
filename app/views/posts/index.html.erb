<p id="notice"><%= notice %></p>

<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= button_to "Cancel my account", registration_path(:user), data: { confirm: "Are you sure?"}, method: :delete, class: 'btn btn-warning' if signed_in?%>
<%= link_to 'New Post', new_post_path %>
